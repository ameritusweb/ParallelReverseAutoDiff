{
  "timeSteps": [
    {
      "startOperations": [
        {
          "id": "projectedInput",
          "description": "Multiply the input with the weight matrix",
          "type": "MatrixMultiplyOperation",
          "inputs": [ "We", "inputSequence" ],
          "gradientResultTo": [ "dWe", null ]
        },
        {
          "id": "embeddedInput",
          "description": "Add the bias",
          "type": "MatrixAddOperation",
          "inputs": [ "projectedInput", "be" ],
          "gradientResultTo": [ null, "dbe" ]
        }
      ],
      "layers": [
        {
          "operations": [
            {
              "id": "w1_currentInput",
              "type": "MatrixMultiplyOperation",
              "inputs": [ "W1[layerIndex]", "currentInput" ],
              "gradientResultTo": [ "dW1[layerIndex]", null ]
            },
            {
              "id": "h_add",
              "type": "MatrixAddOperation",
              "inputs": [ "w1_currentInput", "b1[layerIndex]" ],
              "gradientResultTo": [ null, null, "b1[layerIndex]" ]
            },
            {
              "id": "intermediate_h_1",
              "type": "MatrixTransposeOperation",
              "inputs": [ "h_add" ]
            },
            {
              "id": "intermediate_h_2",
              "type": "LayerNormalizationOperation",
              "inputs": [ "intermediate_h_1" ]
            },
            {
              "id": "intermediate_h_3",
              "type": "MatrixTransposeOperation",
              "inputs": [ "intermediate_h_2" ]
            },
            {
              "id": "h_act",
              "type": "SigmoidOperation",
              "inputs": [ "intermediate_h_3" ],
              "setResultTo": "h[layerIndex]"
            }
          ]
        }
      ],
      "endOperations": [
        {
          "id": "v_h",
          "type": "MatrixMultiplyOperation",
          "inputs": [ "V", "hFromLastLayer" ],
          "gradientResultTo": [ "dV", null ]
        },
        {
          "id": "v_h_b",
          "type": "MatrixAddOperation",
          "inputs": [ "v_h", "b" ],
          "gradientResultTo": [ null, "db" ]
        },
        {
          "id": "output_t",
          "type": "SigmoidOperation",
          "inputs": [ "v_h_b" ],
          "setResultTo": "output"
        }
      ]
    }
  ]
}